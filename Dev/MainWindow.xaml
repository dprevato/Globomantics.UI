<Window x:Class="Dev.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gui='http://globomantics.com/2019/ui/wpf'
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dev"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background='{gui:ThemeResource ResourceKey=ContentBackground}'>
        <Button Margin="8" Padding="8 0" HorizontalAlignment="Right" VerticalAlignment="Top" Click="OnClick" Content="Switch theme" IsDefault="True"/>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="{gui:ThemeResource ResourceKey=ContentForeground}" Text="This is a test!"/>
    </Grid>
</Window>
